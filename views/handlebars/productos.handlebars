<div>
    {{#if list.length}}
        <table>
            <tr>
                <th>Producto:</th>
                <th>Precio:</th>
                <th>Imagen:</th>
            </tr>
            {{#each list}}
                <tr>
                    <td>{{this.producto}}</td>
                    <td>{{this.price}}</td>
                    <td><img src="{{this.thumbnail}}" style="width: 50px; height: auto;"></td>
                </tr> 
            {{/each}}
        </table>
    {{else}}
        <h2>No hay productos para mostrar</h2>
    {{/if}}
</div>